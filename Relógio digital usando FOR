#include<stdio.h>
#include<conio.h>
#include<windows.h>
int main(){
	int h, m, s,sleep;
	 printf("Escolha a velocidade do relogio - valores de 1 a 1000: ");
	  scanf("%d",&sleep);
    	while(h!=0);
      	for (h=0; h<=23; h++){
      		for (m=0; m<=59; m++){
      			for (s=0; s<=59; s++){
      				printf("%2d:%2d:%2d", h, m, s);
      				  Sleep(sleep);
      				system("cls");
      			}
      		}
      	}
      getch();
    return 0;
}
